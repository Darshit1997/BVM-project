<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Placement_Page1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/button1"/>
    </LinearLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lnmain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/placementdetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/adamina"
                android:padding="10dp"
                android:text="@string/placementdetails" />


        </LinearLayout>

    </ScrollView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:id="@+id/lnmain">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/pcyr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2008-2009"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Button
                android:id="@+id/pcyr4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back1"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2011-2012"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Button
                android:id="@+id/pcyr7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2014-2015"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Button
                android:id="@+id/pcyr10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="@drawable/back1"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2017-2018"
                android:textColor="#000000"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/pcyr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back1"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2009-2010"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Button
                android:id="@+id/pcyr5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2012-2013"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Button
                android:id="@+id/pcyr8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back1"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2015-2016"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/pcyr3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2010-2011"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Button
                android:id="@+id/pcyr6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back1"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2013-2014"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Button
                android:id="@+id/pcyr9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:paddingLeft="5dp"
                android:paddingTop="12.5dp"
                android:text="2016-2017"
                android:textColor="#000000"
                android:textSize="25dp" />


        </LinearLayout>


    </LinearLayout>



    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="61dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_bvm" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_bar"
        android:text="Previous Years Placement"
        android:textColor="#000000"
        android:textSize="30dp" />

</RelativeLayout>