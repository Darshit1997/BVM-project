<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Page">





    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DCEDF3"
        android:layout_marginHorizontal="0dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="66dp" />


    </LinearLayout>

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        android:weightSum="9">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="9">

            <Button
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/button1"
                android:layout_weight="3"
                android:paddingTop="50dp"
                android:textStyle="bold"
                android:drawablePadding="-40dp"
                android:layout_marginBottom="-8dp"
                android:layout_marginTop="-8dp"
                android:drawableTop="@drawable/about_us"
                android:text="About us" />

            <Button
                android:id="@+id/magazine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:background="@drawable/button1"
                android:paddingTop="50dp"
                android:drawablePadding="-40dp"
                android:layout_marginBottom="-8dp"
                android:layout_marginTop="-8dp"
                android:drawableTop="@drawable/admissions"
                android:text="Vishvakarma Magazine"
                android:textSize="13dp" />

            <Button
                android:id="@+id/courses"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:background="@drawable/button1"
                android:paddingTop="50dp"
                android:drawablePadding="-40dp"
                android:layout_marginBottom="-8dp"
                android:layout_marginTop="-8dp"
                android:drawableTop="@drawable/courses"
                android:text="courses" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="9">

            <Button
                android:id="@+id/faculty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:layout_marginBottom="-8dp"
                android:background="@drawable/button1"
                android:paddingTop="50dp"
                android:layout_marginTop="-8dp"
                android:drawablePadding="-40dp"
                android:drawableTop="@drawable/faculty"
                android:text="faculty" />

            <Button
                android:id="@+id/placement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:background="@drawable/button1"
                android:paddingTop="50dp"
                android:layout_marginBottom="-8dp"
                android:drawablePadding="-40dp"
                android:layout_marginTop="-8dp"
                android:drawableTop="@drawable/placements"
                android:text="placement" />

            <Button
                android:id="@+id/gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button1"
                android:layout_weight="3"
                android:textStyle="bold"
                android:paddingTop="50dp"
                android:layout_marginBottom="-8dp"
                android:drawablePadding="-40dp"
                android:layout_marginTop="-8dp"
                android:drawableTop="@drawable/gallery"
                android:text="gallery" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="9">

            <Button
                android:id="@+id/eventndnews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:background="@drawable/button1"
                android:drawableTop="@drawable/event"
                android:paddingTop="50dp"
                android:drawablePadding="-40dp"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="-8dp"
                android:text="events"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:gravity="center"
                />

            <Button
                android:id="@+id/contactus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:background="@drawable/button1"
                android:paddingTop="50dp"
                android:drawablePadding="-40dp"
                android:layout_marginBottom="-8dp"
                android:layout_marginTop="-8dp"
                android:drawableTop="@drawable/contactus"
                android:text="contact" />

            <Button
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:background="@drawable/button1"
                android:paddingTop="50dp"
                android:drawablePadding="-40dp"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="-8dp"
                android:drawableTop="@drawable/map"
                android:text="map" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mybutton"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="61dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_bvm" />


</RelativeLayout>